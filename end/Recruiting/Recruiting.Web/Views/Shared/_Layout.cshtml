<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recruiting.Web</title>
    <link rel="stylesheet" href="~/lib/bootswatch/flatly/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="jumbotron text-center mb-0 text-white">
        <h1>The Recruiting Machine</h1>
        <p>Recruit the perfect applicant in less than 5 minutes!!!</p>
    </div>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Recruiting</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item" active-url="Jobs" comparer-mode="contains">
                    <a class="nav-link" asp-controller="Jobs" asp-action="List">Jobs</a>
                </li>
                <li class="nav-item" active-url="Applicants" comparer-mode="contains">
                    <a class="nav-link" asp-controller="Applicants" asp-action="List">Applicants</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class='row flex-xl-nowrap'>
            @RenderSection("LeftMenu", required: false)
            <main role="main" class="pb-3 col-12 col-md-9 col-xl-10 bd-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Recruiting.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
